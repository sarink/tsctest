{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["DOM"],
    "outDir": "../dist/api",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
